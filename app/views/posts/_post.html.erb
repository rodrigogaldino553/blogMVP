<div class="card d-flex flex-row mb-1" style="width: 100%; height: 300px; padding: 10px;">
  <img src="<%= post.image %>" class="card-img-top" style="width: 40%; height: 280px; object-fit: cover;" alt="<% post.title %>">
  <div class="card-body d-flex flex-column justify-content-between">
    <div>
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= link_to post.content[...50], post %></p>
      <%= link_to 'Read more', post, class: "btn btn-primary" %>
      <% if admin_signed_in? %>
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <% end %>
    </div>
    <div class="card-footer">
      <p>posted in: <%= time_ago_in_words(post.created_at) %> ago</p>
    </div>
  </div>
</div>
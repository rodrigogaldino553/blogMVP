<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Image:</strong>
  <img src="<%= @post.image %>" style="width: 200px; height: 150px; object-fit: cover;" alt="<%= @post.image %>">
</p>


<p>
  <div class="container d-flex flex-column justify-content-center align-center">
    <div class="d-flex flex-column justify-content-center align-center" style="max-width: 580px; min-width: fit-content;">
      <% if @post.comment_ids.count < 1 %>
        <h4>Be the first to comment here!</h4>
      <% else %>
        <strong>Comments (<%= @post.comment_ids.count %>)</strong>
      <% end %>
      <% if can? :create, Comment %>
        <%= render partial: 'comments/form', locals: { post: @post } %>
      <% end %>
      <% unless user_signed_in? %>
        <%= link_to 'Sign in to comment!', new_user_session_path %>
      <% end %>
      <% if @post.comment_ids.count > 0 %> 
        <%= render @post.comments.order(id: :desc) %>
      <% end %>
    </div>
  </div>
</p>


<%= link_to 'Back', posts_path %>
